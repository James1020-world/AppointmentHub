@{
    ViewData["Title"] = "Appointments";
}

@model List<Appointments>

<div class="container py-5 text-white">
    <div class="glass-card p-4 rounded-4 shadow-lg">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold mb-0 text-gradient">
                <i class="bi bi-calendar-week me-2"></i> Appointments
            </h1>
            <a asp-action="CreateEditAppointment" class="btn btn-gradient px-4 py-2">
                <i class="bi bi-plus-circle me-1"></i> Add New
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5 opacity-75">
                <i class="bi bi-emoji-frown display-6"></i>
                <p class="mt-3 mb-0 fs-5">No appointments found.</p>
                <p><small>Click <strong>Add New</strong> to create one.</small></p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle table-hover text-white mb-0">
                    <thead class="table-transparent border-bottom border-light">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="fade-in">
                                <td>@item.Id</td>
                                <td class="fw-semibold">@item.Title</td>
                                <td>@item.EndDate?.ToString()</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case 1:
                                            <span class="badge bg-success bg-opacity-75 px-3 py-2">
                                                <i class="bi bi-check-circle me-1"></i> Completed
                                            </span>
                                            break;
                                        case 0:
                                            <span class="badge bg-warning bg-opacity-75 px-3 py-2">
                                                <i class="bi bi-hourglass-split me-1"></i> Pending
                                            </span>
                                            break;
                                        case 2:
                                            <span class="badge bg-secondary bg-opacity-75 px-3 py-2">
                                                <i class="bi bi-x-circle me-1"></i> Canceled
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-light text-dark px-3 py-2">
                                                Unknown
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a asp-action="CreateEditAppointment" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-light me-2">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Are you sure you want to delete this appointment?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(12px);
            border-radius: 1.25rem;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        }

        .table-transparent th {
            color: #e0e7ff;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        .table-hover tbody tr:hover {
            background: rgba(255, 255, 255, 0.1);
            transition: background 0.2s;
        }

        .text-gradient {
            background: linear-gradient(90deg, #a5b4fc, #3b82f6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-gradient {
            background: linear-gradient(90deg, #6366f1, #3b82f6);
            border: none;
            color: #fff !important;
            transition: all 0.3s ease;
        }

            .btn-gradient:hover {
                background: linear-gradient(90deg, #4f46e5, #2563eb);
                transform: translateY(-2px);
            }

        .fade-in {
            animation: fadeIn 0.5s ease both;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
